var getCityInfo = function (param, async, succfun) {
              // 获取筛选城市列表
                var testurl = "http://127.0.0.1:8080/testdata/account_list_city.json";
                var useurl = config.getUrl() + "getDataCategoryCity";
                $.ajax({
                    type: "GET",
                    url: testurl,
                    dataType: "JSON",
