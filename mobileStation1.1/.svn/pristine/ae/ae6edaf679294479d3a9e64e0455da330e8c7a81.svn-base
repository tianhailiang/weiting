function detailClick(target, id, isView,type) {
    // 点击商品跳转到对应商品详情页。

    var url = "";


    switch (type) {

        case "11":
           
           url="wish/planning_division_detail.html?id=" + id + "&isView=" + isView;
           
           break;

        case "10":
            
            url = "detailed_account/hot_list_collect_detail.html?id=" + id + "&isView=" + isView;

            break;

        case "8":

            url = "wish/alive_strategy_detail.html?id=" +id + "&isView=" + isView;

            break;

        case "7":

            url = "wish/experience_activity_detail.html?id=" + id + "&isView=" + isView;
           
            break;

        case "6":
           
            url = "detailed_account/weddingHouse_detail.html?id=" + id + "&type=6" + "&isView=" + isView;
           
            break;

       default :
          
           url="detailed_account/account_item.html?id="+id+ "&type="+type + "&isView=" + isView;  
          
          break;
       

    }


    window.location.href = url;


};




